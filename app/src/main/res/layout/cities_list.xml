<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/martianmonoregular"
        android:lineSpacingExtra=".01dp"
        android:textColor="@color/teal_700"
        android:textFontWeight="500"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toStartOf="@id/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/martianmonoregular"
        android:gravity="center"
        android:text="@string/weatherreport"
        android:textSize="@dimen/small_text"
        app:drawableEndCompat="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/textViewCityName"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintLeft_toLeftOf="@id/textViewCityName"
        app:layout_constraintTop_toTopOf="@id/textViewCityName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewRegion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_text"
        android:fontFamily="@font/martianmonobold"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCityName"
        app:layout_constraintTop_toBottomOf="@+id/textViewCityName" />
</androidx.constraintlayout.widget.ConstraintLayout>
